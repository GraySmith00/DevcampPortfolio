<div class="container">
  <div class="row">
    
    <div class="col-lg-7">
      <%= image_tag @portfolio_item.main_image unless @portfolio_item.main_image.nil? %>
      <br/><br/>
      
      <br/><br/>
    </div>
    
    <div class="col-lg-5">
      <h1><%= @portfolio_item.title %></h1>
      <em><%= @portfolio_item.subtitle %></em>
      <p><%= @portfolio_item.body %></p>
      
      <h3>Technologies Used:</h3>
      <% @portfolio_item.technologies.each do |technology| %>
        <ul>
          <li><%= technology.name %></li>
        </ul>
      <% end %>
      
      
      
      <% if logged_in?(:site_admin) %>
        <%= link_to "Edit", edit_portfolio_path(@portfolio_item.id) %> |
        <%= link_to "Delete", portfolio_path(@portfolio_item.id), method: :delete, 
              data: { confirm: 'Are you sure?' } %> | <%= link_to "Back", :back %> | <%= link_to 'View All Portfolio Items', portfolios_path %>  
      <% end %>
      
    </div>
  
    
  </div>
  

  
</div>



